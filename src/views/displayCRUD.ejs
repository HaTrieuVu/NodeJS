<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>

  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    .btn-edit {
      display: block;
      text-decoration: none;
      outline: none;
      border: none;
      background: rgb(208, 158, 64);
      height: 25px;
      width: 60px;
      margin: 5px 0;
      color: white;
      cursor: pointer;
    }
    .btn-delete {
      display: block;
      text-decoration: none;
      outline: none;
      border: none;
      background: rgb(216, 84, 31);
      height: 25px;
      width: 60px;
      margin: 5px 0;
      color: white;
      cursor: pointer;
    }
  </style>

  <body>
    <h1>Display CRUD from Database</h1>

    <table style="width: 80%">
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Fisrt Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Action</th>
      </tr>
      <% dataTable.forEach(user => { %>
      <tr>
        <td><%= user.id || "N/A" %></td>
        <td><%= user.email || "N/A" %></td>
        <td><%= user.firstName || "N/A" %></td>
        <td><%= user.lastName || "N/A" %></td>
        <td><%= user.phoneNumber || "N/A" %></td>
        <td><%= user.address || "N/A" %></td>
        <td><%= user.gender === 1 ? "Male" : "Female" %></td>
        <td>
          <a href="/edit-crud?id=<%= user.id %>" class="btn-edit" type="button"
            >Edit</a
          >
          <a href="" class="btn-delete" type="button">Delete</a>
        </td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>
